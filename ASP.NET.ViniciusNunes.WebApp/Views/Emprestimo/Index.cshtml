@model IEnumerable<ASP.NET.ViniciusNunes.WebApp.Models.EmprestimoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dataEmprestimo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataDevolucao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.livroId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dataEmprestimo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataDevolucao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.livroId)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })

            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })

            @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
